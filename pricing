// Calcul CoutTotal
function plantesPriceT() {

    var prixPlantesPots = document.getElementById('prixPlantesPots');

    // babyPlante
    babyPlantePots = document.getElementById('babyPlantePots').value; 
    babyPlanteQty = document.getElementById('babyPlanteQty').value; 
